{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/yup"],
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "assets": ["./assets"],
      "components": ["./components"],
      "containers": ["./containers"],
      "hooks": ["./components/hooks"],
      "providers": ["./providers"],
      "screens": ["./screens"],
      "store": ["./store"],
      "types": ["./types"],
      "utils": ["./utils"]
    },
    "rootDirs": ["src", "stories"],
    "types": ["jest"],
  },
  "include": ["./src/**/*", "**/*.test.ts", "global.d.ts"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "files": ["./node_modules/redux-persist/types/integration/react.d.ts"]
}